<div class="card">
  <div class="card-header rounded-0">Edit</div>
  <div class="card-body">
    <form class="edit-form">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" value="{{post.title}}"/>
      </div>
      <div>
        <label for="content">Content</label>
        <textarea type="text" id="content" >{{post.post_content}}</textarea>
      </div>
      <div>
        <button class="btn" type="submit">Update</button>
        <button type="button" class="delete-btn btn">Delete</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>