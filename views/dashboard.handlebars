<ol class="post-list">
  {{#each posts as |post|}}
    <li>
    <article class="card">
      <div class="card-header rounded-0">
        <h2>{{post.title}}</h2>
        <h3>Posted by {{post.user.username}}, {{post.created_at}}</h3>
      </div>
      <div class="card-body">
          <p>{{post.post_content}}</p>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
<a href="/new-post">New Post</a>